{
  "name": "civic-dao",
  "version": "1.0.0",
  "description": "A decentralized autonomous organization platform for transparent city governance",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install && cd ../contracts && npm install",
    "test": "npm run test:frontend && npm run test:backend && npm run test:contracts",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test",
    "test:contracts": "cd contracts && npm test",
    "test:apis": "node scripts/test-api-keys.js",
    "setup:apis": "node scripts/setup-api-keys.js",
    "setup:apis:ps1": "powershell -ExecutionPolicy Bypass -File scripts/setup-api-keys.ps1",
    "setup:apis:sh": "bash scripts/setup-api-keys.sh"
  },
  "keywords": [
    "dao",
    "governance",
    "blockchain",
    "civic",
    "voting",
    "zk-proof",
    "ethereum",
    "polygon"
  ],
  "author": "Civic DAO Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "frontend",
    "backend",
    "contracts"
  ]
}
